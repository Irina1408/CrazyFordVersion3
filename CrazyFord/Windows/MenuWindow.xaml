<c:AppWindow x:Class="CrazyFord.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:AppStyle.Controls;assembly=AppStyle"
        Title="Меню" MinHeight="344.8" MinWidth="402.4" Height="344.8" Width="402.4" ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" Style="{DynamicResource AppWindowGeneralStyle}"
        KeyDown="Window_KeyDown" 
        KeyUp="Window_KeyUp"
        TitleBarButtonsVisibility="Collapsed">
    
    <StackPanel>

        <Button x:Name="btnNewGame" Content="Новая игра"
                Click="btnNewGame_Click"/>

        <Button x:Name="btnResumeGame" Content="Продолжить игру"
                IsDefault="True" IsCancel="True"
                Click="btnResumeGame_Click"/>

        <Button x:Name="btnSettings" Content="Настройки"
                Click="btnSettings_Click"/>
        
        <Button x:Name="btnRules" Content="Правила"
                Click="btnRules_Click"/>

        <Button x:Name="btnAbout" Content="Об игре"
                Click="btnAbout_Click"/>

        <Button x:Name="btnExit" Content="Выйти из игры"
                Click="btnExit_Click"/>
    </StackPanel>
    
</c:AppWindow>
